    <Border Background="#2a3492" Padding="20,10">
        <Grid ColumnDefinitions="*,*,*,*">
            <!-- 首页 -->
            <RadioButton 
                Command="{Binding MainNavigateToViewCommand}"
                CommandParameter="message"
                Grid.Column="0" Classes="tabButton" GroupName="TabGroup" IsChecked="True">
                <StackPanel Spacing="4">
                    <PathIcon Data="{StaticResource user_message}" Classes="tabIcon" />
                    <TextBlock Text="微信" Classes="tabText" />
                </StackPanel>
            </RadioButton>

            <!-- 通讯录 -->
            <RadioButton
                Command="{Binding MainNavigateToViewCommand}"
                CommandParameter="communication"
                Grid.Column="1" Classes="tabButton" GroupName="TabGroup">
                <StackPanel Spacing="4">
                    <PathIcon Data="{StaticResource people_regular}" Classes="tabIcon" />
                    <TextBlock Text="通讯录" Classes="tabText" />
                </StackPanel>
            </RadioButton>

            <!-- 发现 -->
            <RadioButton
                Command="{Binding MainNavigateToViewCommand}"
                CommandParameter="find"
                Grid.Column="2" Classes="tabButton" GroupName="TabGroup">
                <StackPanel Spacing="4">
                    <PathIcon Data="{StaticResource search_regular}" Classes="tabIcon" />
                    <TextBlock Text="发现" Classes="tabText" />
                </StackPanel>
            </RadioButton>

            <!-- 我 -->
            <RadioButton
                Command="{Binding MainNavigateToViewCommand}"
                CommandParameter="me"
                Grid.Column="3" Classes="tabButton" GroupName="TabGroup">
                <StackPanel Spacing="4">
                    <PathIcon Data="{StaticResource my_message}" Classes="tabIcon" />
                    <TextBlock Text="我" Classes="tabText" />
                </StackPanel>
            </RadioButton>
        </Grid>
    </Border>

    <UserControl.Styles>
        <Style Selector="RadioButton.tabButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="PathIcon.tabIcon">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Foreground" Value="#6b75d1" />
        </Style>

        <Style Selector="TextBlock.tabText">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#6b75d1" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <!-- 选中状态样式 -->
        <Style Selector="RadioButton.tabButton:checked PathIcon.tabIcon">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="RadioButton.tabButton:checked TextBlock.tabText">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- 鼠标悬停样式 -->
        <Style Selector="RadioButton.tabButton:pointerover PathIcon.tabIcon">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="RadioButton.tabButton:pointerover TextBlock.tabText">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Styles>
</UserControl>